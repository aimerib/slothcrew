{% macro responsiveImage(src, alt, sizes="100vw") %}
<picture>
    {% if src.endsWith('.jpg') or src.endsWith('.jpeg') or src.endsWith('.png') %}
    <source
        type="image/webp"
        srcset="{{ src | replace('.jpg', '.webp') | replace('.jpeg', '.webp') | replace('.png', '.webp') }} 1x"
        sizes="{{ sizes }}">
    {% endif %}
    <img
        src="{{ src }}"
        alt="{{ alt }}"
        loading="lazy"
        decoding="async"
        width="100%"
        height="auto"
        {% if not src.includes('placeholder') %}class="fade-in"{% endif %}>
</picture>
{% endmacro %} 